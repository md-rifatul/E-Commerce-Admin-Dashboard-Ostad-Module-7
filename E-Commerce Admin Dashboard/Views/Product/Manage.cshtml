@using E_Commerce_Admin_Dashboard.ViewModels
@model List<ProductViewModel>
@{
    var newProduct = ViewBag.NewProduct as ProductViewModel ?? new ProductViewModel();
}

<h2>Manage Products</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h3>All Products</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Add New Product</h3>

<form asp-controller="Product" asp-action="AddProduct" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    
    <div class="mb-3">
        <label for="Name" class="form-label">Product Name</label>
        <input type="text" name="Name" id="Name" class="form-control" value="@newProduct.Name" 
               data-val="true" 
               data-val-required="Product name is required" 
               data-val-length="Product name must be between 2 and 100 characters" 
               data-val-length-min="2" 
               data-val-length-max="100" />
        <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea name="Description" id="Description" class="form-control" rows="3" 
                  data-val="true" 
                  data-val-required="Description is required" 
                  data-val-length="Description must be between 10 and 500 characters" 
                  data-val-length-min="10" 
                  data-val-length-max="500">@newProduct.Description</textarea>
        <span class="text-danger field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" name="Price" id="Price" class="form-control" step="0.01" value="@(newProduct.Price > 0 ? newProduct.Price.ToString() : "")" 
               data-val="true" 
               data-val-required="Price is required" 
               data-val-range="Price must be greater than 0" 
               data-val-range-min="0.01" />
        <span class="text-danger field-validation-valid" data-valmsg-for="Price" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="StockQuantity" class="form-label">Stock Quantity</label>
        <input type="number" name="StockQuantity" id="StockQuantity" class="form-control" value="@(newProduct.StockQuantity > 0 ? newProduct.StockQuantity.ToString() : "")" 
               data-val="true" 
               data-val-required="Stock quantity is required" 
               data-val-range="Stock quantity must be 0 or greater" 
               data-val-range-min="0" />
        <span class="text-danger field-validation-valid" data-valmsg-for="StockQuantity" data-valmsg-replace="true"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
</form>

<br />

<a asp-controller="Product" asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}